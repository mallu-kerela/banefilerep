<?xml version="1.0" encoding="UTF-8"?>
<project name="module_ban_file_repair" default="compile.module.ban_file_repair">
  <dirname property="module.ban_file_repair.basedir" file="${ant.file.module_ban_file_repair}"/>
  
  <property name="module.jdk.home.ban_file_repair" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.ban_file_repair" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.ban_file_repair" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.ban_file_repair" value="-encoding UTF-8 -source 1.8 -target 1.8 ${compiler.args}"/>
  
  <property name="ban_file_repair.output.dir" value="${module.ban_file_repair.basedir}/out/production/BAN FILE REPAIR"/>
  <property name="ban_file_repair.testoutput.dir" value="${module.ban_file_repair.basedir}/out/test/BAN FILE REPAIR"/>
  
  <path id="ban_file_repair.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="ban_file_repair.module.production.classpath">
    <path refid="${module.jdk.classpath.ban_file_repair}"/>
  </path>
  
  <path id="ban_file_repair.runtime.production.module.classpath">
    <pathelement location="${ban_file_repair.output.dir}"/>
  </path>
  
  <path id="ban_file_repair.module.classpath">
    <path refid="${module.jdk.classpath.ban_file_repair}"/>
    <pathelement location="${ban_file_repair.output.dir}"/>
  </path>
  
  <path id="ban_file_repair.runtime.module.classpath">
    <pathelement location="${ban_file_repair.testoutput.dir}"/>
    <pathelement location="${ban_file_repair.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.ban_file_repair">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.ban_file_repair">
    <patternset refid="excluded.from.module.ban_file_repair"/>
  </patternset>
  
  <path id="ban_file_repair.module.sourcepath">
    <dirset dir="${module.ban_file_repair.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.ban_file_repair" depends="compile.module.ban_file_repair.production,compile.module.ban_file_repair.tests" description="Compile module BAN FILE REPAIR"/>
  
  <target name="compile.module.ban_file_repair.production" depends="register.custom.compilers" description="Compile module BAN FILE REPAIR; production classes">
    <mkdir dir="${ban_file_repair.output.dir}"/>
    <javac2 destdir="${ban_file_repair.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.ban_file_repair}/javac">
      <compilerarg line="${compiler.args.ban_file_repair}"/>
      <bootclasspath refid="ban_file_repair.module.bootclasspath"/>
      <classpath refid="ban_file_repair.module.production.classpath"/>
      <src refid="ban_file_repair.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.ban_file_repair"/>
    </javac2>
    
    <copy todir="${ban_file_repair.output.dir}">
      <fileset dir="${module.ban_file_repair.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.ban_file_repair.tests" depends="register.custom.compilers,compile.module.ban_file_repair.production" description="compile module BAN FILE REPAIR; test classes" unless="skip.tests"/>
  
  <target name="clean.module.ban_file_repair" description="cleanup module">
    <delete dir="${ban_file_repair.output.dir}"/>
    <delete dir="${ban_file_repair.testoutput.dir}"/>
  </target>
</project>